.nav {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    width: 100%;
    height: 80rpx;
    background-color: #00bcd4;
    box-shadow: 0rpx 3rpx 1rpx #00b9d2 inset;
    font-size: 32rpx;
    color: #f0ffff;
}

.menu-icon {
    align-self: flex-start;
    box-sizing: border-box;
    margin: auto;
    margin-left: 20rpx;
    padding: 10rpx 0rpx;
    border-top: 8rpx #f0ffff solid;
    border-bottom: 8rpx #f0ffff solid;
    height: 44rpx;
    width: 44rpx;
    background-color: #f0ffff;
    background-clip: content-box;
}

.nav-item {
    box-sizing: border-box;
    width: 100rpx;
    text-align: center;
    line-height: 80rpx;
    overflow: hidden;
}

.nav-item-active {
    display: inline-block;
    position: absolute;
    top: 74rpx;
    width: 100rpx;
    height: 6rpx;
    background-color: #fa8072;
    transition: left 0.2s ease-out;
}

.main {
    width: 100%;
}

.main-item {
    display: flex;
    align-items: center;
    box-sizing: border-box;
    width: 100%;
    height: 160rpx;
    padding: 20rpx;
    border: 1rpx ghostwhite solid;
    overflow: hidden;
}

.author-img {
    height: 70rpx;
    flex-basis: 10%;
    border-radius: 50%;
}

.message-view {
    display: flex;
    flex-wrap: wrap;
    flex-basis: 90%;
    height: 120rpx;
    margin: auto 20rpx;
    overflow: hidden;
}

.title-view {
    width: 100%;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.good-icon {
    display: inline-block;
    width: 60rpx;
    height: 40rpx;
    margin-right: 16rpx;
    border-radius: 5rpx;
    background-color: #80bd01;
    font-size: 24rpx;
    line-height: 40rpx;
    text-align: center;
    color: #f0ffff;
}

.common-icon {
    display: inline-block;
    width: 60rpx;
    height: 40rpx;
    margin-right: 16rpx;
    border-radius: 5rpx;
    background-color: #bbb;
    font-size: 24rpx;
    line-height: 40rpx;
    text-align: center;
    color: #e5e5e5;
}

.tilte {
    font-size: 28rpx;
    font-weight: bold;
}

.count-view {
    font-size: 26rpx;
}

.reply-count {
    color: #9e78c0;
}

.divide-line {
    color: #000;
}

.visit-count {
    color: #b4b4b4;
}

.reply-time {
    margin-left: 16rpx;
    color: #778087;
}

